<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context="io.straas.android.sdk.streaming.demo.camera.StreamingFiltersActivity">

    <TextureView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_camera"
        android:enabled="false"
        android:onClick="switchCamera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ToggleButton
        android:id="@+id/skin_beautify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:onClick="skinBeautify"
        android:textOff="@string/skin_beautify"
        android:textOn="@string/skin_beautify"
        app:layout_constraintLeft_toRightOf="@id/switch_camera"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/brightness_description"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Brightness"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/smoothness_description"/>
    <SeekBar
        android:id="@+id/seek_bar_brightness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/brightness_description"
        app:layout_constraintLeft_toRightOf="@id/brightness_description"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/smoothness_description"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Smoothness"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <SeekBar
        android:id="@+id/seek_bar_skin_smoothness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/smoothness_description"
        app:layout_constraintLeft_toRightOf="@id/smoothness_description"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
